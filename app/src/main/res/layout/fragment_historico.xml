<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/inputUserId"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Informe o ID do usuÃ¡rio"
        android:inputType="text" />


    <Spinner
        android:id="@+id/spinnerMotoristas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:entries="@array/motoristas_array" />


    <Button
        android:id="@+id/btnAplicarFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/green"
        android:text="Aplicar Filtro" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewViagens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

</LinearLayout>
